@model TextEditorMVC.Models.UserForRegistration
@{
    ViewData["Title"] = "Register";
}
    <div class="text-center">
        <img id="logo" src="~/images/title.png" alt="Italian Trulli">
    </div>

    <form asp-controller="Authentication" id="RegisterForm" style="background-color:White" asp-action="Register">

        <fieldset>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input class="form-control" asp-for=Username placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input class="form-control" asp-for=Name placeholder="Enter Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input class="form-control" asp-for=Email placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input class="form-control" asp-for=Password />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepeatedPassword" class="control-label">Confirm password</label>
                <input class="form-control" asp-for=RepeatedPassword />
                <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
            </div>

        </fieldset>
        <div class="col-md-12 text-center ">
            <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Register</button>
        </div>
    </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}