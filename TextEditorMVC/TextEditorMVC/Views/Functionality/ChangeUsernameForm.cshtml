@model TextEditorMVC.Models.ChangeForUsername
@{
    ViewData["Title"] = "ChangeUsernameForm";
}

    <div id="A"><h2> Change you username</h2> </div>
<form asp-controller="Functionality" id="ChangeUsernameForm" style="background-color:White" asp-action="ChangeUsername">

    <fieldset>
        <div class="form-group">
            <label asp-for="NewUsername" class="control-label">New Username</label>
            <input class="form-control" asp-for=NewUsername placeholder="Enter new username" />
            <span asp-validation-for="NewUsername" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input class="form-control" asp-for=Password />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </fieldset>
    <div class="col-md-12 text-center ">
        <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Save</button>
    </div>
</form>

<script src="~/js/myProfile.js">

</script>

