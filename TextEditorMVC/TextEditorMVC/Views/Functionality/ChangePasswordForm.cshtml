@model TextEditorMVC.Models.ChangeForPassword
@{
    ViewData["Title"] = "ChangePasswordForm";
}
<div id="A"><h2>Change your password</h2></div>
<form asp-controller="Functionality" id="ChangePasswordForm" style="background-color:White" asp-action="ChangePassword">

    <fieldset>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input class="form-control" asp-for=Password />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">New Password</label>
            <input class="form-control" asp-for=NewPassword placeholder="Enter new password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RepeatedNewPassword" class="control-label">Confirm new password</label>
            <input class="form-control" asp-for=RepeatedNewPassword />
            <span asp-validation-for="RepeatedNewPassword" class="text-danger"></span>
        </div>
    </fieldset>
    <div class="col-md-12 text-center ">
        <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Save</button>
    </div>
</form>
<script src="~/js/myProfile.js">

</script>



